<div class = "container">
  <p>
    <strong>Title:</strong>
    <%= @deal.title %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= @deal.description %>
  </p>
  <p>
    <strong>Price:</strong>
    <%= @deal.price %>
  </p> 
  <p>
    <strong>Publishable:</strong>
    <%= @deal.published_at ? @deal.published_at : false %>
  </p> 

  <% if @deal.images.attached? %>
    <% @deal.images.each do |image| %>
      <div class = "container">
        <%= image_tag(url_for(image), class: "rounded mx-auto d-block img-fluid") %>
        <br>
      </div>
    <% end %>
  <% end %>

  <div id = "publish-data">
  </div>

  <br>
  
  <%= form_with method: :get, url: check_publishability_admin_deal_path, class: "form-signin" do %>

    <div class = "form-group">
      <%= label_tag(:date, "Date:") %>
      <%= date_field_tag(:publishable_check_date, class: "form-date") %>
    </div>
    <div class = "form-group">
      <%= submit_tag "Check Publishability", class: "btn btn-info" %>
    </div>

  <%end%>

  <%= link_to "Back", admin_deals_path %>
</div>
  