  <% if flash[:notice] %>
    <aside class = "alert alert-success"><%= flash[:notice] %></aside>
  <% end %>

  <div class = "container">
    <p>
      <strong>Title:</strong>
      <%= @deal.title %>
    </p>
    <p>
      <strong>Description:</strong>
      <%= @deal.description %>
    </p>
    <p>
      <strong>Price:</strong>
      <%= @deal.price %>
    </p> 
    <p>
      <strong>Publishable:</strong>
      <%= @deal.published_date ? @deal.published_date : false %>
    </p> 

    <% if @deal.images.attached? %>
      <% @deal.images.each do |image| %>
        <div class = "container">
          <%= image_tag(url_for(image), class: "rounded mx-auto d-block img-fluid") %>
          <br>
        </div>
      <% end %>
    <% end %>
    <%= link_to "Back", admin_deals_path %>
  </div>
  