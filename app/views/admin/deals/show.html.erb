<div class = "container">
  <div class = "card text-black bg-light " style="width: 80%;">
    <div class = "card-header bg-dark">
      <% if @deal.images.attached? %>
        <div class="row">
          <% @deal.images.each_with_index do |image, index| %>
            <%if index % 3 == 0 && index != 0%>
              </div>
              <div class="row">
            <% end%>
            <div class = "col">
              <%= image_tag(url_for(image), class: "rounded mx-auto img-thumbnail thumbnail") %>
              <br>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class = "card-body">
      <p>
        <strong>Title:</strong>
        <%= @deal.title %>
      </p>
      <p>
        <strong>Description:</strong>
        <%= @deal.description %>
      </p>
      <p>
        <strong>Price:</strong>
        <%= number_to_currency(@deal.price) %>
      </p>
      <p>
        <strong>Publishable:</strong>
        <h5 id = "publish-date"><%= @deal.presenter.publish_status %></h5>
      </p>

      <div id = "check-publish-data">
      </div>

      <br>

      <div class = "container text-center mb-5">
        <%= form_with method: :get, url: check_publishability_admin_deal_path, class: "form-signin" do %>

          <div class = "form-group">
            <%= date_field_tag(:publishable_check_date, class: "form-date") %>
          </div>
          <div class = "form-group">
            <%= submit_tag "Check Publishability", class: "btn btn-info" %>
          </div>

        <%end%>
      </div>
      <% if @deal.published_at.blank? || @deal.published_at > Time.current + 1.day %>
        <div id = "publish-data">
        </div>
        <br>
        <div class = "container text-center">
          <%= form_with method: :get, url: publish_admin_deal_path, class: "form-signin" do %>

            <div class = "form-group">
              <%= date_field_tag(:publish_date, class: "form-date") %>
            </div>
            <div class = "form-group">
              <%= submit_tag "Publish Now", class: "btn btn-warning btn-lg" %>
            </div>

          <%end%>
        </div>
      <% end %>

    </div>
  </div>
  <br>
  <%= link_to "Back", admin_deals_path %>
</div>
