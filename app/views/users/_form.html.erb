<div class = "container">
  <%= form_with(model: user, local: true, class: "form-signin") do |form| %>
    <% if user.errors.any? %>
      <div class = "card text-white bg-danger mb-4">
        <div class = "card-header">
          <h2> <%= user.errors.count %> errors prohibited this user from getting saved:</h2>
        </div>
        <ul>
        <div class="card-text">
          <% user.errors.full_messages.each do |message| %>
            <li> <%= message %> </li>
          <% end %>
          </div>
        </ul>
      </div>
    <% end %>

    <h4> Enter User Details </h4>

    <div class = "form-group">
      <%= form.label :name, "Name:", class: "sr-only" %>
      <%= form.text_field :name, placeholder: "Name" %>
    </div>

    <div class = "form-group">
      <%= form.label :Email, "Email:", class: "sr-only" %>
      <%= form.text_field :email, placeholder: "Email" %>
    </div>

    <div class = "form-group">
      <%= form.label :password, "Password:", class: "sr-only" %>
      <%= form.password_field :password, placeholder: "Password" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, 'Confirm:', class: "sr-only" %>
      <%= form.password_field :password_confirmation, placeholder: "Confirm Password",
                               id: :user_password_confirmation %>
    </div>

    <div class = "form-group">
      <%= form.submit :SIGNUP, class: "btn btn-primary" %>
    </div>

  <% end %>
</div>
