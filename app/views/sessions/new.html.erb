<div class="container text-center">

  <%= form_tag class: "form-signin" do %>
    <h2>SIGN IN</h2>
    <div class = "form-group">
      <%= label_tag :email, "Email:", class: "sr-only" %>
      <%= text_field_tag :email, params[:email], placeholder: "Email" %>
    </div>
    <div class = "form-group">
      <%= label_tag :password, "Password:", class: "sr-only" %>
      <%= password_field_tag :password, params[:password], placeholder: "Password" %>
    </div>
    <p><%= link_to "forgotten password?", new_password_reset_path %></p>
    <div class="form-group">
      <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      <%= label_tag :remember_me %>
    </div>
    <div class = "form-group">
      <%= submit_tag "Login", class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>
<br>
<p> New here, <%= link_to "click", new_user_path %> here to Sign-up </p>
</div>
